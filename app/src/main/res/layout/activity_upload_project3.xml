<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadProject3"
    android:background="@color/black"
    android:orientation="vertical">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Team Details"
      android:textColor="@color/purple_500"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textAlignment="center"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="University Name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/university_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edittext_uploadpage"
        android:elevation="3dp"
        app:layout_constraintWidth_percent=".8" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/collaboration"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Collaboration "
        android:textStyle="bold"
        android:textColor="@color/white"
        android:drawableRight="@drawable/add_new_icon"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:orientation="horizontal">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/collabarator_name"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/edittext_uploadpage"
            android:elevation="3dp"
            app:layout_constraintWidth_percent=".8"
            android:layout_margin="10dp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/collabarator_email"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/edittext_uploadpage"
            android:elevation="3dp"
            app:layout_constraintWidth_percent=".8"
            android:layout_margin="10dp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Role"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/collabarator_role"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/edittext_uploadpage"
            android:elevation="3dp"
            app:layout_constraintWidth_percent=".8"
            android:layout_margin="10dp"/>
      </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

      <TextView
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:layout_marginTop="15dp"
          android:text="Project Status"
          android:textColor="@color/white"
          android:textSize="20sp"
          android:textStyle="bold"
          />
      <Spinner
          android:id="@+id/project_status"
          android:layout_width="100dp"
          android:layout_height="30dp"
          android:layout_marginStart="130dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/edittext_uploadpage"/>
    </LinearLayout>
    <Button
        android:id="@+id/upage_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="350dp"
       android:layout_gravity="center"/>

    </LinearLayout>
    </LinearLayout>
  </ScrollView>

</LinearLayout>