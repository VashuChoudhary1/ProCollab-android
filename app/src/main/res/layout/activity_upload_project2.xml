<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadProject2"
    android:background="@color/black"
    android:orientation="vertical">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
    android:orientation="vertical">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Project Details"
      android:textColor="@color/purple_500"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textAlignment="center"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Tech-Stack :"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

   <EditText
       android:id="@+id/tech_stack"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp"
       android:background="@drawable/edittext_uploadpage"
       android:elevation="3dp"
       app:layout_constraintWidth_percent=".8" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Project Theme :"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/project_theme"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edittext_uploadpage"
        android:elevation="3dp"
        app:layout_constraintWidth_percent=".8" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Project Link :"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/project_link"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edittext_uploadpage"
        android:elevation="3dp"
        app:layout_constraintWidth_percent=".8" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Video Link :"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/video_link"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edittext_uploadpage"
        android:elevation="3dp"
        app:layout_constraintWidth_percent=".8" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="center">

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Photos "
        android:textStyle="bold"
        android:textColor="@color/white"
        android:drawableRight="@drawable/add_new_icon"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/add_photos"
        android:text="(Image.png)"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="7dp"
        android:textColor="@color/black"
        android:background="@drawable/edittext_uploadpage"
        android:elevation="3dp"
        app:layout_constraintWidth_percent=".8" />
  </LinearLayout>

  <Button
      android:id="@+id/upage_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Next"
      android:layout_gravity="end"/>
  </LinearLayout>
  </ScrollView>


  </LinearLayout>